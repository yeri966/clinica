<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.clinica.controlador.RegistroCitaControlador"
      style="-fx-padding: 20px;">
    <Label text="Agendar Cita" style="-fx-font-size: 18px;" />
    <ComboBox fx:id="cbPaciente"  promptText="Paciente"/>
    <ComboBox fx:id="cbServicio"  promptText="Servicio"/>
    <DatePicker fx:id="dpFecha"    promptText="Fecha"/>
    <TextField fx:id="tfHora"      promptText="Hora (HH:mm)"/>
    <Button text="Agendar" onAction="#agendarCita"/>
    <Label fx:id="lblMensaje"/>
</VBox>
